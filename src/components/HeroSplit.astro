// src/components/HeroSplit.astro

---

<section
  id="heroSplit"
  class="relative w-full min-h-screen bg-no-repeat bg-cover bg-center bg-hero-mobile"
>
  <!-- Fondo blanco solo para móviles -->
  

  <div class="relative z-10 flex items-center justify-center w-full h-full">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-7xl w-full px-4 py-5 md:py-32 text-black">
      <!-- Diseñador -->
      <div class="flex flex-col justify-center items-start text-left md:pl-12 animate-slideInLeft">
        <h2 class="text-4xl font-bold mb-4 md:py-32  drop-shadow-md">Ing. Sistemas de Información</h2>
        <p class="text-xl  max-w-sm drop-shadow-sm">
          Apasionado por la creación de experiencias digitales intuitivas, combinando lógica, diseño y tecnología.
        </p>
      </div>

      <!-- Coder -->
      <div class="flex flex-col justify-center items-end text-right md:pr-12 animate-slideInRight">
        <h2 class="text-4xl font-bold mb-4 md:py-32  drop-shadow-md">&lt;Coder&gt;</h2>
        <p class="text-xl  max-w-sm drop-shadow-sm">
          Desarrollador web junior con bases sólidas en HTML, CSS, JavaScript.
        </p>
      </div>

    </div>
  </div>
</section>
