---
// src/components/Navbar.astro
---

<nav class="sticky top-0 z-50 bg-black/80 backdrop-blur-md shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">

    <!-- Logo -->
    <a href="#heroSplit" class="flex items-center gap-2">
      <img src="/src/assets/logo-eday.png" alt="Logo EDAY" class="h-10 w-auto" />
      <!-- <span class="text-white font-bold text-xl">David</span> -->
    </a>

    <!-- Menú para escritorio -->
    <ul class="hidden md:flex space-x-6 text-sm font-medium text-white">
      <li><a href="#heroSplit" class="hover:text-cyan-400 transition">Inicio</a></li>
      <li><a href="#about" class="hover:text-cyan-400 transition">Sobre mí</a></li>
      <li><a href="#portfolio" class="hover:text-cyan-400 transition">Formación</a></li>
      <li><a href="#contact" class="hover:text-cyan-400 transition">Contacto</a></li>
    </ul>

    <!-- Botón hamburguesa (móvil) -->
    <button class="md:hidden text-white text-2xl focus:outline-none" id="menu-button">
      ☰
    </button>
  </div>

  <!-- Menú desplegable móvil -->
  <ul id="mobile-menu" class="hidden flex-col md:hidden bg-black/90 px-6 py-4 text-white space-y-4 text-center">
    <li><a href="#heroSplit" class="block hover:text-cyan-400">Inicio</a></li>
    <li><a href="#about" class="block hover:text-cyan-400">Sobre mí</a></li>
    <li><a href="#portfolio" class="block hover:text-cyan-400">Formación</a></li>
    <li><a href="#contact" class="block hover:text-cyan-400">Contacto</a></li>
  </ul>

  <!-- Script para mostrar/ocultar menú móvil -->
  <script is:inline>
    const btn = document.getElementById('menu-button');
    const menu = document.getElementById('mobile-menu');
  
    // Alternar el menú al hacer clic en el botón hamburguesa
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  
    // Seleccionar todos los enlaces dentro del menú móvil
    const links = menu.querySelectorAll('a');
  
    // Agregar evento a cada enlace
    links.forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden'); // Oculta el menú al hacer clic
      });
    });
  </script>
</nav>
