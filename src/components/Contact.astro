// src/components/Contact.astro
---

<section id="contact" class="py-10   bg-white text-gray-900">
    <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-4xl font-bold text-center mb-12">Contáctame</h2>
    
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
    
            <!-- Info de contacto -->
            <div class="flex flex-col gap-6">
                <div>
                    <h3 class="text-lg font-semibold mb-1">Correo</h3>
                    <p class="text-gray-700">davidmgrbn@gmail.com</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-1">Teléfono</h3>
                    <p class="text-gray-700">+593 958 705 974</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-1">Ubicación</h3>
                    <p class="text-gray-700">Latacunga, Cotopaxi - Ecuador</p>
                </div>
                <div class="flex gap-4 mt-2">
                    <a href="#" target="_blank" class="text-cyan-600 hover:text-cyan-800 transition">Facebook</a>
                    <a href="#" target="_blank" class="text-cyan-600 hover:text-cyan-800 transition">Tiktok</a>
                </div>
            </div>
    
        <!-- Formulario -->
        <form class="bg-gray-100 p-6 rounded-xl shadow space-y-4">
            <input type="text" placeholder="Tu nombre" class="w-full px-4 py-2 rounded border focus:outline-none focus:ring focus:ring-cyan-300" />
            <input type="email" placeholder="Tu correo" class="w-full px-4 py-2 rounded border focus:outline-none focus:ring focus:ring-cyan-300" />
            <textarea placeholder="Tu mensaje" rows="5" class="w-full px-4 py-2 rounded border focus:outline-none focus:ring focus:ring-cyan-300"></textarea>
            <button type="submit" class="w-full bg-cyan-600 text-white py-2 rounded hover:bg-cyan-700 transition">
                Enviar mensaje
            </button>
        </form>

    </div>
</div>
</section>
